<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etNomNovaLlista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Nueva Lista"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbDataCad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gestiona Fechas de Caducidad"
        app:layout_constraintEnd_toEndOf="@+id/etNomNovaLlista"
        app:layout_constraintStart_toStartOf="@+id/etNomNovaLlista"
        app:layout_constraintTop_toBottomOf="@+id/etNomNovaLlista" />

    <CheckBox
        android:id="@+id/cbGestionaCantidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gestiona Cantidades"
        app:layout_constraintEnd_toEndOf="@+id/cbDataCad"
        app:layout_constraintStart_toStartOf="@+id/cbDataCad"
        app:layout_constraintTop_toBottomOf="@+id/cbDataCad" />

    <CheckBox
        android:id="@+id/cbGestionaUbicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gestiona Ubicaciones"
        app:layout_constraintEnd_toEndOf="@+id/cbGestionaCantidad"
        app:layout_constraintStart_toStartOf="@+id/cbGestionaCantidad"
        app:layout_constraintTop_toBottomOf="@+id/cbGestionaCantidad" />
</androidx.constraintlayout.widget.ConstraintLayout>