<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/ivIconoCaducitat"
      android:layout_width="50dp"
      android:layout_height="50dp"
      tools:src="@tools:sample/avatars"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp" />

  <TextView
      android:id="@+id/tvDataCaducitat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@+id/ivIconoCaducitat"
      app:layout_constraintTop_toTopOf="@+id/ivIconoCaducitat"
      tools:text="@tools:sample/full_names" />

  <TextView
      android:id="@+id/tvQuantitatCaducitat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/ivIconoCaducitat"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/ivIconoCaducitat"
      tools:text="@tools:sample/date/hhmm" />

  <TextView
      android:id="@+id/tvUbicacioDetallCaducitat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="@+id/ivIconoCaducitat"
      app:layout_constraintStart_toStartOf="@+id/tvDataCaducitat"
      app:layout_constraintTop_toBottomOf="@+id/tvDataCaducitat" />

  <View
      android:id="@+id/divider4"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivIconoCaducitat" />
</androidx.constraintlayout.widget.ConstraintLayout>